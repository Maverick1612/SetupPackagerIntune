Procedure OpenAboutWindow(x = 0, y = 0, width = 600, height = 360)
  AboutWindow = OpenWindow(#PB_Any, x, y, width, height, "About Setup Packager", #PB_Window_SystemMenu | #PB_Window_ScreenCentered)
  Image_ApplicationIcon = ImageGadget(#PB_Any, 30, 30, 128, 128, ImageID(Img_AboutWindow_0))
  Text_Title = TextGadget(#PB_Any, 200, 60, 350, 50, "Setup Packager")
  SetGadgetColor(Text_Title, #PB_Gadget_FrontColor,RGB(39,39,39))
  SetGadgetFont(Text_Title, FontID(#Font_AboutWindow_0))
  Text_AboutThisApp = TextGadget(#PB_Any, 200, 40, 100, 25, "About this app")
  SetGadgetFont(Text_AboutThisApp, FontID(#Font_AboutWindow_1))
  Text_Version = TextGadget(#PB_Any, 200, 110, 350, 25, "Intune Version 1.5.3")
  SetGadgetFont(Text_Version, FontID(#Font_AboutWindow_1))
  Text_Copyright = TextGadget(#PB_Any, 200, 140, 350, 25, "Copyright (c) 2024 TUGI - www.tugi.ch")
  Text_Description1 = TextGadget(#PB_Any, 200, 190, 350, 20, "This application helps you to package your setup files for Intune")
  SetGadgetColor(Text_Description1, #PB_Gadget_FrontColor,RGB(128,128,128))
  Text_Description2 = TextGadget(#PB_Any, 200, 210, 350, 20, "faster and easier with the official Win32 Content Prep Tool.")
  SetGadgetColor(Text_Description2, #PB_Gadget_FrontColor,RGB(128,128,128))
  Container_0 = ContainerGadget(#PB_Any, 0, 290, 600, 70)
  SetGadgetColor(Container_0, #PB_Gadget_BackColor,RGB(255,255,255))
  Hyperlink_IconsBy = HyperLinkGadget(#PB_Any, 50, 30, 170, 25, "Icons by Iconfinder and Icons8", 0)
  SetGadgetColor(Hyperlink_IconsBy, #PB_Gadget_FrontColor,RGB(39,39,39))
  SetGadgetColor(Hyperlink_IconsBy, #PB_Gadget_BackColor,RGB(255,255,255))
  Button_ShowWebsite_Copy1 = ButtonGadget(#PB_Any, 350, 20, 110, 35, "Show website")
  Button_CloseAbout = ButtonGadget(#PB_Any, 470, 20, 110, 35, "OK")
  CloseGadgetList()
  Image_ApplicationIcon_Copy1 = ImageGadget(#PB_Any, 120, 120, 48, 48, ImageID(Img_AboutWindow_1))
  Text_Description2_Copy1 = TextGadget(#PB_Any, 200, 250, 350, 20, "The use of the application is at your own risk.")
