Procedure CreationWindow_PSADT_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case CW_Button_InstallationFile
          BrowseInstallationPath(EventType())          
        Case CW_Button_UninstallationFile
          BrowseUninstallationPath(EventType())          
        Case CW_Button_Close
          CloseCreationWindow(EventType())          
        Case CW_Button_InstalledApps
          ShowSearchWindow(EventType())          
        Case CW_Button_Create
          CreatePSADTProject(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure



