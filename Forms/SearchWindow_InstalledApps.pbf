EndProcedure

Procedure SearchWindow_InstalledApps_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case SW_Button_Search
          SearchInstalledApp(EventType())          
        Case SW_Button_OK
          CloseSearchWindow(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure



